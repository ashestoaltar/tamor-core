# Tamor Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Reference Storage
# =============================================================================
# Base path for reference data (SWORD modules, Sefaria cache)
# Change this path to migrate to NAS or other storage locations
TAMOR_REFERENCE_PATH=/home/tamor/data/references

# Sefaria API cache time-to-live in days
SEFARIA_CACHE_TTL_DAYS=30

# Default Bible translation (e.g., KJV, NASB, ESV, NIV)
DEFAULT_BIBLE_TRANSLATION=NASB
