# Personality & memory
PERSONALITY_FILE=config/personality.json
MEMORY_DB=memory/tamor.db

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM Providers
# Multi-provider architecture: each mode routes to its optimal provider

# xAI (Grok) - Scholar mode (theological research, textual analysis)
XAI_API_KEY=xai-your-key-here

# Anthropic (Claude) - Engineer mode (coding tasks, instruction-following)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI (fallback only)
OPENAI_API_KEY=your-openai-key-here
OPENAI_MODEL=gpt-4.1-mini

# Ollama (local classification/routing)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3:mini

# Flask
FLASK_ENV=production
FLASK_SECRET_KEY=change_this_to_a_random_secret
